@model List<Models.VideoItemVM>

@{
    ViewData["Title"] = "Home";
}
<div class="row">
    @foreach (var item in Model)
    {
    <div class="col-lg-3 col-md-6 col-sm-12 mb-3">
        <div class="row">
            <div class="video-item col-12">
                <a href="/Watch?v=@item.Id">
                    <img src="@item.Thumbnail" style="width:100%;" />
                    <div class="duration mr-3">@item.Duration</div>
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-12"><a href="/Watch?v=@item.Id"><h6>@item.Title</h6></a></div>
        </div>
        <div class="row">
            <div class="col-12"><strong>@item.Poster</strong></div>
        </div>
        <div class="row">
            <div class="col-12"><small>@item.Views</small></div>
        </div>
    </div>
    }
</div>